---
const iframeSrc = 'https://embed.liveavatar.com/v1/2d5c33cb-5a47-4188-8629-4656b4b0dc30';
---

<div data-live-avatar-widget class="live-avatar-widget">
  <div id="live-avatar-panel" data-live-avatar-panel class="live-avatar-panel" aria-hidden="true">
    <div class="live-avatar-header">
      <p class="live-avatar-title">Talk to Caleb</p>
      <button type="button" data-live-avatar-close class="live-avatar-close" aria-label="Close avatar window">
        Ã—
      </button>
    </div>
    <iframe
      data-live-avatar-iframe
      data-src={iframeSrc}
      allow="microphone"
      title="LiveAvatar Embed"
      class="live-avatar-frame"
      loading="lazy"
    ></iframe>
  </div>

  <button type="button" data-live-avatar-toggle class="live-avatar-toggle" aria-expanded="false" aria-controls="live-avatar-panel">
    <span class="live-avatar-dot" aria-hidden="true"></span>
    <span class="live-avatar-label">Talk</span>
  </button>
</div>

<script is:inline>
  (() => {
    const root = document.querySelector('[data-live-avatar-widget]');
    if (!root) return;

    const panel = root.querySelector('[data-live-avatar-panel]');
    const toggle = root.querySelector('[data-live-avatar-toggle]');
    const closeBtn = root.querySelector('[data-live-avatar-close]');
    const iframe = root.querySelector('[data-live-avatar-iframe]');
    let opened = false;
    let loaded = false;

    const setOpen = (next) => {
      opened = next;
      root.classList.toggle('is-open', opened);
      panel.setAttribute('aria-hidden', opened ? 'false' : 'true');
      toggle.setAttribute('aria-expanded', opened ? 'true' : 'false');
      if (opened && !loaded) {
        const src = iframe.getAttribute('data-src');
        if (src) {
          iframe.setAttribute('src', src);
          loaded = true;
        }
      }
    };

    toggle.addEventListener('click', () => setOpen(!opened));
    closeBtn.addEventListener('click', () => setOpen(false));
    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape' && opened) setOpen(false);
    });
  })();
</script>

<style>
  .live-avatar-widget {
    position: fixed;
    right: 1rem;
    bottom: 1rem;
    z-index: 70;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.75rem;
  }

  .live-avatar-panel {
    width: min(360px, calc(100vw - 2rem));
    height: min(600px, calc(100vh - 8rem));
    border-radius: 1rem;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.22);
    background: linear-gradient(145deg, rgba(8, 12, 18, 0.96), rgba(18, 25, 36, 0.94));
    box-shadow: 0 22px 55px rgba(0, 0, 0, 0.5);
    transform: translateY(12px) scale(0.98);
    opacity: 0;
    pointer-events: none;
    transition: opacity 180ms ease, transform 180ms ease;
  }

  .live-avatar-widget.is-open .live-avatar-panel {
    transform: translateY(0) scale(1);
    opacity: 1;
    pointer-events: auto;
  }

  .live-avatar-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    padding: 0.65rem 0.8rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.14);
    background: rgba(7, 10, 14, 0.66);
    backdrop-filter: blur(10px);
  }

  .live-avatar-title {
    margin: 0;
    font-size: 0.78rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.9);
  }

  .live-avatar-close {
    width: 1.9rem;
    height: 1.9rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.25);
    background: rgba(255, 255, 255, 0.07);
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.15rem;
    line-height: 1;
    cursor: pointer;
  }

  .live-avatar-frame {
    width: 100%;
    height: calc(100% - 3.2rem);
    border: 0;
    display: block;
    background: #000;
  }

  .live-avatar-toggle {
    display: inline-flex;
    align-items: center;
    gap: 0.55rem;
    border: 1px solid rgba(255, 255, 255, 0.28);
    background: linear-gradient(130deg, rgba(10, 14, 20, 0.96), rgba(25, 34, 46, 0.92));
    color: rgba(255, 255, 255, 0.94);
    border-radius: 999px;
    padding: 0.62rem 0.95rem;
    cursor: pointer;
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.38);
  }

  .live-avatar-dot {
    width: 0.6rem;
    height: 0.6rem;
    border-radius: 999px;
    background: linear-gradient(120deg, #fb7185, #f97316);
    box-shadow: 0 0 0 5px rgba(251, 113, 133, 0.2);
  }

  .live-avatar-label {
    font-size: 0.78rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    font-weight: 600;
  }

  @media (max-width: 640px) {
    .live-avatar-widget {
      right: 0.75rem;
      bottom: 0.75rem;
    }

    .live-avatar-panel {
      height: min(530px, calc(100vh - 7rem));
    }
  }
</style>
