---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/research', label: 'Research' },
  { href: '/solutions', label: 'Solutions' },
  { href: '/portfolio', label: 'Portfolio' },
  { href: '/team', label: 'Team' },
  { href: '/contact', label: 'Contact' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 px-6 py-4">
  <div class="max-w-7xl mx-auto">
    <div class="glass rounded-2xl px-8 py-4 flex items-center justify-between">
      <a href="/" class="text-xl font-semibold tracking-tight">
        Past<span class="text-gradient">Presence</span>
      </a>
      
      <div class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="text-sm font-medium text-neutral-700 hover:text-accent-pink transition-colors duration-200"
          >
            {item.label}
          </a>
        ))}
      </div>
      
      <button class="md:hidden">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
</nav>