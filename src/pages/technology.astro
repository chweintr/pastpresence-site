---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import ParticleBackground from '../components/ParticleBackground.astro';

const architectureLayers = [
  {
    title: 'Authoring Layer',
    points: [
      'Persona definitions: voice, goals, boundaries',
      'Narrative state design and memory policy',
      'Editorial revision and release gating',
    ],
  },
  {
    title: 'Runtime Layer',
    points: [
      'Real-time conversation loop',
      'Speech I/O and turn orchestration',
      'Safety and constraint enforcement',
    ],
  },
  {
    title: 'Output Layer',
    points: [
      'Live dialogue sessions',
      'Session artifacts (writing/audio where applicable)',
      'Cross-product analytics and improvement cycle',
    ],
  },
];

const experienceModes = [
  {
    name: 'HEARSAY',
    detail: 'Voice-first fiction runtime with authored narrative constraints.',
  },
  {
    name: 'Echoes',
    detail: 'Site-specific heritage interactions for institutional and public spaces.',
  },
  {
    name: 'Reading Companions',
    detail: 'Text-grounded educational dialogue with guided inquiry patterns.',
  },
];
---

<BaseLayout title="Technology">
  <ParticleBackground />
  <Navigation />
  
  <section class="relative pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl text-white mb-6">
          Platform <span class="text-gradient">Architecture</span>
        </h1>
        <p class="text-xl text-white/75 max-w-3xl mx-auto">
          One shared architecture supports three product lines with different surfaces and markets.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6 mb-12">
        {architectureLayers.map((layer) => (
          <article class="glass rounded-3xl p-8">
            <h2 class="text-2xl text-white mb-4">{layer.title}</h2>
            <ul class="space-y-3">
              {layer.points.map((point) => (
                <li class="text-sm text-white/80 flex items-start gap-2">
                  <span class="text-accent-pink mt-1">•</span>
                  <span>{point}</span>
                </li>
              ))}
            </ul>
          </article>
        ))}
      </div>

      <div class="grid lg:grid-cols-[1.1fr_1fr] gap-8 mb-12">
        <article class="glass-dark rounded-3xl p-10 text-white">
          <h2 class="text-3xl mb-5">One Engine, Three Modes</h2>
          <ul class="space-y-4">
            {experienceModes.map((mode) => (
              <li class="flex items-start gap-3">
                <span class="text-accent-pink mt-1">•</span>
                <span>
                  <strong>{mode.name}:</strong> {mode.detail}
                </span>
              </li>
            ))}
          </ul>
        </article>

        <article class="glass rounded-3xl p-6">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden border border-white/20 mb-6">
            <img
              src="/images/ui-reference/glassmorphic-interface-1.png"
              alt="Conversation interface reference"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          <p class="text-sm text-white/70">
            Conversation interface reference.
          </p>
        </article>
      </div>

      <div class="glass rounded-3xl p-10 text-center">
        <h2 class="text-3xl text-white mb-4">Interested in the Technical Stack?</h2>
        <p class="text-white/75 mb-8 max-w-3xl mx-auto">
          We can share implementation detail to match your deployment context and constraints.
        </p>
        <a href="/contact" class="inline-flex items-center gap-2 bg-gradient-to-r from-accent-pink to-accent-coral hover:opacity-90 text-white px-8 py-4 rounded-full font-medium transition-all duration-300">
          Request Technical Brief
          <span aria-hidden="true">→</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
