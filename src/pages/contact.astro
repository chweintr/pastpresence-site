---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
import { company } from '../data/company';
---

<BaseLayout title="Contact" description="Contact PastPresence for partnerships, installations, and funding conversations.">
  <ParticleBackground />
  <Navigation />

  <section class="relative pt-32 pb-24 px-6 min-h-screen flex items-center">
    <div class="max-w-4xl mx-auto w-full">
      <div class="text-center mb-12">
        <h1 class="text-5xl md:text-6xl text-white mb-6">
          Build With
          <span class="text-gradient"> PastPresence</span>
        </h1>
        <p class="text-white/75 text-lg">
          For installations, pilots, school programs, and strategic funding conversations.
        </p>
      </div>

      <div class="glass rounded-3xl p-10 md:p-12">
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h2 class="text-2xl text-white mb-4">Primary Contact</h2>
            <p class="text-white/75 mb-2">Caleb Weintraub</p>
            <p class="text-white/75 mb-6">Founder, PastPresence</p>
            <a
              href="mailto:calebweintraubstudio@gmail.com?subject=PastPresence%20Inquiry"
              class="inline-flex items-center gap-2 text-accent-coral hover:text-white transition-colors"
            >
              calebweintraubstudio@gmail.com
              <span aria-hidden="true">↗</span>
            </a>
            <div class="mt-6 space-y-2 text-sm">
              <p class="text-white/65">Web:</p>
              <a
                href={company.website}
                target="_blank"
                rel="noopener noreferrer"
                class="block text-accent-coral hover:text-white transition-colors"
              >
                {company.website}
              </a>
              <a
                href={company.hearsayPrimaryUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="block text-accent-coral hover:text-white transition-colors"
              >
                {company.hearsayPrimaryUrl}
              </a>
              <p class="text-white/55">Alternate HEARSAY domain: {company.hearsayAltUrl}</p>
            </div>
          </div>

          <div class="glass-dark rounded-2xl p-6 text-white">
            <h3 class="text-xl mb-4">Best Topics</h3>
            <ul class="space-y-3 text-sm text-white/80">
              <li class="flex items-start gap-2">
                <span class="text-accent-pink mt-1">•</span>
                <span>Echoes installation partnerships (US and international)</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-accent-pink mt-1">•</span>
                <span>HEARSAY distribution and commercialization partnerships</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-accent-pink mt-1">•</span>
                <span>Reading Companion school pilots and curriculum partners</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-accent-pink mt-1">•</span>
                <span>Pre-seed investment and strategic introductions</span>
              </li>
            </ul>
          </div>
        </div>

        <div class="mt-10 pt-8 border-t border-white/15">
          <p class="text-sm text-white/65 mb-4">Include in your note:</p>
          <ul class="grid md:grid-cols-2 gap-3 text-sm text-white/80">
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span>Organization and role</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span>Which product line you are interested in</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span>Geography and venue context</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span>Desired timeline and scope</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
