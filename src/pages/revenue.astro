---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import ParticleBackground from '../components/ParticleBackground.astro';

const yearTargets = [
  {
    line: 'HEARSAY',
    model: 'B2C',
    pricing: '$15-20 / session',
    year2: '5K paying users, $75K-100K',
    year3: '25K users + sensory pack revenue',
  },
  {
    line: 'Echoes',
    model: 'B2B',
    pricing: '$50K-250K / installation',
    year2: '2-3 installations, $100K-500K',
    year3: '10+ installations, $500K-2.5M',
  },
  {
    line: 'Companions',
    model: 'B2B2C',
    pricing: '$5K-15K / school license',
    year2: '5-10 school pilot',
    year3: '50+ schools, $250K-750K',
  },
];

const revenueStreams = [
  {
    title: 'HEARSAY',
    text: 'Pay-per-session plus serialized subscription. Writing Engine output and audiobook narration as premium tiers.',
  },
  {
    title: 'Echoes',
    text: 'Contract-based installations with recurring licensing for maintenance, content updates, and ongoing character care.',
  },
  {
    title: 'Companions',
    text: 'Institutional licensing first, with author-estate partnerships and individual subscriptions as the second channel.',
  },
];
---

<BaseLayout title="Business Model" description="PastPresence revenue model across HEARSAY, Echoes, and Reading Companions.">
  <ParticleBackground />
  <Navigation />

  <section class="relative pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-14">
        <h1 class="text-5xl md:text-6xl text-white mb-4">Business Model</h1>
        <p class="text-white/75 text-lg max-w-3xl mx-auto">
          Revenue diversification from day one. Three distinct streams on shared infrastructure.
        </p>
      </div>

      <div class="glass rounded-3xl p-10 mb-10">
        <p class="text-sm uppercase tracking-[0.18em] text-white/60 mb-5">Portfolio Target</p>
        <div class="grid md:grid-cols-3 gap-5">
          <div class="glass-dark rounded-2xl p-6 text-white">
            <p class="text-sm text-white/65 mb-2">Year 2-3 combined</p>
            <p class="text-3xl">$1M-3.5M</p>
          </div>
          <div class="glass-dark rounded-2xl p-6 text-white">
            <p class="text-sm text-white/65 mb-2">Current build mode</p>
            <p class="text-3xl">$0 raised</p>
          </div>
          <div class="glass-dark rounded-2xl p-6 text-white">
            <p class="text-sm text-white/65 mb-2">Traction anchor</p>
            <p class="text-3xl">$75K committed</p>
          </div>
        </div>
      </div>

      <div class="grid lg:grid-cols-3 gap-6 mb-10">
        {yearTargets.map((target) => (
          <article class="glass-dark rounded-3xl p-8 text-white">
            <p class="text-xs uppercase tracking-[0.14em] text-white/60 mb-3">{target.model}</p>
            <h2 class="text-3xl mb-2">{target.line}</h2>
            <p class="text-accent-coral mb-5">{target.pricing}</p>
            <p class="text-sm text-white/70 mb-3"><strong class="text-white">Year 2:</strong> {target.year2}</p>
            <p class="text-sm text-white/70"><strong class="text-white">Year 3:</strong> {target.year3}</p>
          </article>
        ))}
      </div>

      <div class="glass rounded-3xl p-10 mb-10">
        <h2 class="text-3xl text-white mb-8">Revenue Streams by Line</h2>
        <div class="grid md:grid-cols-3 gap-6">
          {revenueStreams.map((stream) => (
            <article class="glass-dark rounded-2xl p-6">
              <h3 class="text-xl text-white mb-3">{stream.title}</h3>
              <p class="text-white/75 text-sm leading-relaxed">{stream.text}</p>
            </article>
          ))}
        </div>
      </div>

      <div class="glass rounded-3xl p-10">
        <h2 class="text-3xl text-white mb-5">Capital Use (Pre-seed)</h2>
        <ul class="space-y-3 mb-8">
          <li class="text-white/85 flex items-start gap-3">
            <span class="text-accent-pink mt-1">•</span>
            <span>Go full-time and move from founder-only execution to compact core team.</span>
          </li>
          <li class="text-white/85 flex items-start gap-3">
            <span class="text-accent-pink mt-1">•</span>
            <span>First hires: frontend engineer and business development lead.</span>
          </li>
          <li class="text-white/85 flex items-start gap-3">
            <span class="text-accent-pink mt-1">•</span>
            <span>Launch paid HEARSAY sessions and scale to first 10K users.</span>
          </li>
          <li class="text-white/85 flex items-start gap-3">
            <span class="text-accent-pink mt-1">•</span>
            <span>Fund first sensory pack production run and close initial Echoes contracts.</span>
          </li>
          <li class="text-white/85 flex items-start gap-3">
            <span class="text-accent-pink mt-1">•</span>
            <span>Run 5-10 school pilots for Reading Companions.</span>
          </li>
        </ul>
        <a href="/contact" class="inline-flex items-center gap-2 bg-gradient-to-r from-accent-pink to-accent-coral hover:opacity-90 text-white px-7 py-3 rounded-full font-medium transition-all duration-300">
          Discuss Partnership or Investment
          <span aria-hidden="true">→</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
