---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
---

<BaseLayout title="Revenue Model">
  <ParticleBackground />
  <Navigation />
  
  <section class="relative pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-light mb-6">
          Sustainable Revenue
          <span class="block text-gradient">Through Innovation</span>
        </h1>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
          Transform idle display time into revenue streams that offset operational costs and create sustainable experiences
        </p>
      </div>
      
      <!-- Idle Mode Advertising -->
      <div class="glass rounded-3xl p-12 mb-12">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl font-semibold mb-6">Idle Mode Advertising</h2>
            <p class="text-lg text-neutral-600 mb-6">
              When not in active conversation, your holographic display transforms into a premium advertising platform featuring ethereal particle animations and sponsored content.
            </p>
            <ul class="space-y-4">
              <li class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-coral-100 flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-coral-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-medium mb-1">Dynamic Content Rotation</h4>
                  <p class="text-neutral-600">Seamlessly blend particle effects with sponsor messages and local business promotions</p>
                </div>
              </li>
              <li class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-coral-100 flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-coral-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-medium mb-1">Premium Placement</h4>
                  <p class="text-neutral-600">High-traffic museum locations ensure maximum visibility for advertisers</p>
                </div>
              </li>
              <li class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-coral-100 flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-coral-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-medium mb-1">Non-Intrusive Integration</h4>
                  <p class="text-neutral-600">Maintains the ethereal aesthetic while generating revenue</p>
                </div>
              </li>
            </ul>
          </div>
          <div class="relative">
            <div class="aspect-square rounded-3xl bg-gradient-to-br from-neutral-100 to-neutral-200 flex items-center justify-center">
              <div class="text-center p-8">
                <div class="w-24 h-24 mx-auto mb-4 rounded-full bg-gradient-to-br from-coral-300 to-coral-500 animate-pulse"></div>
                <p class="text-sm text-neutral-500 mb-2">Idle Mode Active</p>
                <p class="text-xs text-neutral-400">Generating Revenue</p>
              </div>
            </div>
            <div class="absolute -bottom-4 -right-4 glass rounded-2xl px-4 py-2">
              <p class="text-sm font-medium">$2-10K/month potential</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Revenue Streams -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
        <div class="glass-dark rounded-2xl p-6 text-white">
          <h3 class="text-lg font-semibold mb-2">Installation Revenue</h3>
          <p class="text-3xl font-bold text-coral-400 mb-2">$60-300K</p>
          <p class="text-sm text-neutral-300">One-time setup fee</p>
        </div>
        <div class="glass-dark rounded-2xl p-6 text-white">
          <h3 class="text-lg font-semibold mb-2">Monthly Maintenance</h3>
          <p class="text-3xl font-bold text-coral-400 mb-2">$2-10K</p>
          <p class="text-sm text-neutral-300">Recurring support & updates</p>
        </div>
        <div class="glass-dark rounded-2xl p-6 text-white">
          <h3 class="text-lg font-semibold mb-2">Advertising Revenue</h3>
          <p class="text-3xl font-bold text-coral-400 mb-2">$1-5K</p>
          <p class="text-sm text-neutral-300">Monthly idle mode income</p>
        </div>
        <div class="glass-dark rounded-2xl p-6 text-white">
          <h3 class="text-lg font-semibold mb-2">Sponsorships</h3>
          <p class="text-3xl font-bold text-coral-400 mb-2">$5-25K</p>
          <p class="text-sm text-neutral-300">Per sponsored persona</p>
        </div>
      </div>
      
      <!-- Additional Revenue Opportunities -->
      <div class="glass rounded-3xl p-12">
        <h2 class="text-3xl font-semibold mb-8 text-center">Additional Revenue Streams</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-coral-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-coral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Event Rentals</h3>
            <p class="text-neutral-600">Corporate events, galas, and private functions</p>
            <p class="text-sm font-medium text-coral-500 mt-2">$5-15K per event</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-coral-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-coral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Content Licensing</h3>
            <p class="text-neutral-600">License personas to other institutions</p>
            <p class="text-sm font-medium text-coral-500 mt-2">$1-5K per month</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-coral-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-coral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Premium Experiences</h3>
            <p class="text-neutral-600">VIP sessions and educational workshops</p>
            <p class="text-sm font-medium text-coral-500 mt-2">$25-100 per ticket</p>
          </div>
        </div>
      </div>
      
      <!-- ROI Calculator Preview -->
      <div class="mt-16 text-center">
        <h2 class="text-3xl font-semibold mb-4">Calculate Your ROI</h2>
        <p class="text-lg text-neutral-600 mb-8">
          Most institutions achieve full ROI within 18-24 months through combined revenue streams
        </p>
        <a href="/contact" class="inline-flex items-center gap-2 bg-coral-500 hover:bg-coral-600 text-white px-8 py-4 rounded-full font-medium transition-all duration-300 hover:scale-105">
          Get Custom Revenue Projection
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>