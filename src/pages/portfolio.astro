---
import BaseLayoutAlt from '../layouts/BaseLayoutAlt.astro';
import Navigation from '../components/Navigation.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
---

<BaseLayoutAlt title="Portfolio">
  <ParticleBackground />
  <Navigation />
  
  <section class="relative pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-light mb-6">
          Echoes of
          <span class="text-gradient">Indiana</span>
        </h1>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
          Our flagship installation bringing Bloomington's rich history to life through interactive holographic conversations
        </p>
      </div>
      
      <!-- Project Overview -->
      <div class="glass rounded-3xl p-12 mb-12">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl font-semibold mb-6">The Vision</h2>
            <p class="text-lg text-neutral-600 mb-6">
              Echoes of Indiana transforms the traditional museum experience by allowing visitors to have natural conversations with historical figures from Indiana's past. From Kurt Vonnegut to Madam C.J. Walker, each holographic persona is powered by advanced AI to create authentic, educational interactions.
            </p>
            <div class="flex flex-wrap gap-4">
              <div class="glass-dark rounded-full px-6 py-3 text-white">
                <span class="text-sm">15+ Historical Figures</span>
              </div>
              <div class="glass-dark rounded-full px-6 py-3 text-white">
                <span class="text-sm">AI-Powered Dialogue</span>
              </div>
              <div class="glass-dark rounded-full px-6 py-3 text-white">
                <span class="text-sm">Life-Sized Holograms</span>
              </div>
            </div>
          </div>
          <div class="relative">
            <div class="aspect-video rounded-3xl bg-gradient-to-br from-neutral-100 to-neutral-200 overflow-hidden">
              <div class="absolute inset-0 flex items-center justify-center">
                <a href="https://indiana-oracle-entity-project-production.up.railway.app/" 
                   target="_blank" 
                   class="group flex flex-col items-center gap-4 text-center p-8">
                  <div class="w-20 h-20 rounded-full bg-coral-500 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <p class="text-neutral-600 font-medium">View Live Demo</p>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Featured Personas -->
      <div class="mb-16">
        <h2 class="text-3xl font-semibold text-center mb-8">Featured Personas</h2>
        <div class="grid md:grid-cols-4 gap-6">
          <div class="glass rounded-2xl p-6 text-center">
            <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-coral-300 to-coral-500"></div>
            <h3 class="font-semibold mb-1">Kurt Vonnegut</h3>
            <p class="text-sm text-neutral-600">Author & Humanist</p>
          </div>
          <div class="glass rounded-2xl p-6 text-center">
            <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-coral-300 to-coral-500"></div>
            <h3 class="font-semibold mb-1">Madam C.J. Walker</h3>
            <p class="text-sm text-neutral-600">Entrepreneur & Philanthropist</p>
          </div>
          <div class="glass rounded-2xl p-6 text-center">
            <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-coral-300 to-coral-500"></div>
            <h3 class="font-semibold mb-1">Larry Bird</h3>
            <p class="text-sm text-neutral-600">Basketball Legend</p>
          </div>
          <div class="glass rounded-2xl p-6 text-center">
            <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-coral-300 to-coral-500"></div>
            <h3 class="font-semibold mb-1">Lil BUB</h3>
            <p class="text-sm text-neutral-600">Internet Icon</p>
          </div>
        </div>
      </div>
      
      <!-- Technical Specifications -->
      <div class="glass rounded-3xl p-12 mb-12">
        <h2 class="text-3xl font-semibold mb-8 text-center">Technical Implementation</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-semibold mb-4">Display Technology</h3>
            <ul class="space-y-2 text-neutral-600">
              <li class="flex items-start gap-2">
                <span class="text-coral-500 mt-1">•</span>
                <span>HYPERVSN LED rotor arrays or Pepper's Ghost projection</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-coral-500 mt-1">•</span>
                <span>Life-sized volumetric display</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-coral-500 mt-1">•</span>
                <span>Ethereal particle effects</span>
              </li>
            </ul>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-4">AI Conversation Engine</h3>
            <ul class="space-y-2 text-neutral-600">
              <li class="flex items-start gap-2">
                <span class="text-coral-500 mt-1">•</span>
                <span>Natural language processing</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-coral-500 mt-1">•</span>
                <span>Context-aware responses</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-coral-500 mt-1">•</span>
                <span>Historical accuracy safeguards</span>
              </li>
            </ul>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-4">Visitor Experience</h3>
            <ul class="space-y-2 text-neutral-600">
              <li class="flex items-start gap-2">
                <span class="text-coral-500 mt-1">•</span>
                <span>Voice-activated interactions</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-coral-500 mt-1">•</span>
                <span>Multi-language support</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-coral-500 mt-1">•</span>
                <span>Accessibility features</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
      
      <!-- Project Status -->
      <div class="text-center">
        <div class="inline-flex items-center gap-2 glass rounded-full px-6 py-3 mb-8">
          <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
          <span class="font-medium">In Development - Launch 2025</span>
        </div>
        <h2 class="text-3xl font-semibold mb-4">Bring Echoes to Your Institution</h2>
        <p class="text-lg text-neutral-600 mb-8 max-w-2xl mx-auto">
          Join the future of interactive historical education. Create your own Echoes installation featuring your region's unique stories and personalities.
        </p>
        <a href="/contact" class="inline-flex items-center gap-2 bg-coral-500 hover:bg-coral-600 text-white px-8 py-4 rounded-full font-medium transition-all duration-300 hover:scale-105">
          Start Your Project
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayoutAlt>