---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
import { productLines } from '../data/company';

const hearsayExperiences = [
  { name: 'The Knock', frame: 'Peephole', genre: 'Mystery, hearsay, hotel noir' },
  { name: 'The Fare', frame: 'Rearview mirror', genre: 'Night shift noir, no destination' },
  { name: 'The Chair', frame: 'Barbershop mirror', genre: 'Oral history as intimacy' },
  { name: 'The Trail', frame: 'Trail cam / found footage', genre: 'Cryptid folklore' },
  { name: 'The Booth', frame: 'Confessional lattice', genre: 'Confession without absolution' },
  { name: 'The Session', frame: 'Degraded video feed', genre: 'Chemically-assisted philosophy' },
];

const echoesExpansion = [
  { name: 'Echoes of Anatolia', region: 'Turkey', status: 'In development' },
  { name: 'Echoes of Uppsala', region: 'Sweden', status: 'Planned' },
  { name: 'Echoes of Appalachia', region: 'United States', status: 'Planned' },
];
---

<BaseLayout title="Products" description="HEARSAY, Echoes Projects, and Reading Companions by PastPresence.">
  <ParticleBackground />
  <Navigation />

  <section class="relative pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-14">
        <h1 class="text-5xl md:text-6xl text-white mb-4">Product Portfolio</h1>
        <p class="text-white/75 text-lg max-w-3xl mx-auto">
          PastPresence operates across three markets with one authored conversational architecture.
        </p>
      </div>

      <div class="grid lg:grid-cols-3 gap-6 mb-16">
        {productLines.map((line) => (
          <article class="glass rounded-3xl p-8">
            <p class="text-xs uppercase tracking-[0.14em] text-white/60 mb-3">{line.model}</p>
            <h2 class="text-2xl text-white mb-2">{line.name}</h2>
            <p class="text-sm text-white/70 mb-4">{line.subtitle}</p>
            <p class="text-white/85 mb-5">{line.summary}</p>
            <p class="text-accent-coral text-sm mb-5">{line.pricing}</p>
            <ul class="space-y-2 mb-6">
              {line.highlights.map((item) => (
                <li class="text-sm text-white/75 flex items-start gap-2">
                  <span class="text-accent-pink mt-1">•</span>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
            <a
              href={line.primaryLink.href}
              target={line.primaryLink.href.startsWith('http') ? '_blank' : undefined}
              rel={line.primaryLink.href.startsWith('http') ? 'noopener noreferrer' : undefined}
              class="inline-flex items-center gap-2 text-white hover:text-accent-coral transition-colors"
            >
              {line.primaryLink.label}
              <span aria-hidden="true">→</span>
            </a>
          </article>
        ))}
      </div>

      <div class="grid lg:grid-cols-2 gap-6 mb-16">
        <article class="glass-dark rounded-3xl p-8 text-white">
          <h3 class="text-2xl mb-4">HEARSAY Slate</h3>
          <p class="text-white/75 mb-6">
            Six experiences designed. One live. Shared writing engine, character system, and audio pipeline.
          </p>
          <div class="space-y-3">
            {hearsayExperiences.map((exp) => (
              <div class="glass rounded-xl p-4">
                <p class="font-medium mb-1">{exp.name}</p>
                <p class="text-sm text-white/70">{exp.frame}</p>
                <p class="text-sm text-white/70">{exp.genre}</p>
              </div>
            ))}
          </div>
        </article>

        <article class="glass rounded-3xl p-8">
          <h3 class="text-2xl text-white mb-4">Echoes Expansion</h3>
          <p class="text-white/80 mb-6">
            Echoes of Indiana is the flagship installation. The same framework adapts to any region — local history, local voices, local materials.
          </p>
          <div class="glass-dark rounded-2xl p-4 text-white mb-4">
            <p class="text-sm uppercase tracking-[0.14em] text-white/60 mb-2">Flagship</p>
            <p class="text-xl">Echoes of Indiana</p>
            <p class="text-sm text-white/70">$75K committed. Venue and installation pathway in progress.</p>
          </div>
          <p class="text-sm uppercase tracking-[0.14em] text-white/60 mb-3">Additional Regions in Development</p>
          <div class="space-y-2">
            {echoesExpansion.map((site) => (
              <div class="glass-dark rounded-xl p-3 flex items-center justify-between">
                <div>
                  <p class="text-white text-sm font-medium">{site.name}</p>
                  <p class="text-white/60 text-xs">{site.region}</p>
                </div>
                <span class="text-white/50 text-xs">{site.status}</span>
              </div>
            ))}
          </div>
        </article>
      </div>

      <div class="glass rounded-3xl p-8 md:p-10">
        <div class="grid lg:grid-cols-[1.1fr_1fr] gap-8 items-center">
          <div>
            <h3 class="text-3xl text-white mb-4">Reading Companions</h3>
            <p class="text-white/80 mb-4">
              One companion per author. Vonnebot demonstrates the core pattern: grounded text context plus guided Socratic dialogue.
            </p>
            <p class="text-white/80 mb-6">
              Primary channel is institutional licensing for schools, with direct subscriptions as a secondary path.
            </p>
            <a href="/revenue" class="inline-flex items-center gap-2 bg-gradient-to-r from-accent-pink to-accent-coral hover:opacity-90 text-white px-7 py-3 rounded-full font-medium transition-all duration-300">
              See Revenue Model
              <span aria-hidden="true">→</span>
            </a>
          </div>
          <div class="rounded-3xl overflow-hidden border border-white/20">
            <img src="/images/past-presense-back.png" alt="PastPresence visual reference" class="w-full h-full object-cover" loading="lazy" />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
