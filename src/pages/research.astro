---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import ParticleBackground from '../components/ParticleBackground.astro';

const sourceLanes = [
  {
    title: 'Primary Materials',
    detail:
      'Books, archives, oral histories, interviews, and period documents used to define persona knowledge boundaries.',
  },
  {
    title: 'Context Layer',
    detail:
      'Regional vocabulary, social context, and historical timelines that control what a persona can and cannot claim.',
  },
  {
    title: 'Voice Layer',
    detail:
      'Authorial constraints for tone, rhythm, values, and dialogue style so each character has a consistent voice.',
  },
];

const releaseGates = [
  'Knowledge-scope checks (no out-of-frame claims)',
  'Tone and persona-consistency review',
  'Sensitivity and harmful-content review',
  'Live conversation rehearsal and revision pass',
];

const activePrograms = [
  'HEARSAY: live conversational fiction sessions with authored narrative constraints',
  'Echoes: Indiana installation path in progress; Anatolia in preliminary planning',
  'Reading Companions: pilot-oriented educational companion framework',
];
---

<BaseLayout title="Research Methodology">
  <ParticleBackground />
  <Navigation />
  
  <section class="relative pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl text-white mb-6">
          Research and <span class="text-gradient">Editorial Method</span>
        </h1>
        <p class="text-xl text-white/75 max-w-3xl mx-auto">
          PastPresence treats conversational systems as authored works. Research, constraints, and revision come before launch.
        </p>
      </div>

      <div class="grid lg:grid-cols-[1.1fr_1fr] gap-8 mb-12">
        <article class="glass rounded-3xl p-10">
          <h2 class="text-3xl text-white mb-5">How a Persona Is Built</h2>
          <ol class="space-y-4 text-white/80">
            <li class="flex items-start gap-3">
              <span class="text-accent-pink mt-1">1.</span>
              <span>Source collection and legal/rights review where relevant.</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-accent-pink mt-1">2.</span>
              <span>Authoring persona rules: voice, limits, perspective, and memory behavior.</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-accent-pink mt-1">3.</span>
              <span>Conversation rehearsal against expected and adversarial prompts.</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-accent-pink mt-1">4.</span>
              <span>Editorial revision, then launch behind monitored runtime constraints.</span>
            </li>
          </ol>
        </article>

        <article class="glass-dark rounded-3xl p-6">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden border border-white/20 mb-6">
            <img
              src="/images/past-presense-blank.png"
              alt="PastPresence reference visual"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          <p class="text-sm text-white/70">
            Visual note: this slot is ready for a final research/process image whenever you drop one into `public/images/incoming/`.
          </p>
        </article>
      </div>

      <div class="grid md:grid-cols-3 gap-6 mb-12">
        {sourceLanes.map((lane) => (
          <article class="glass-dark rounded-2xl p-6">
            <h3 class="text-xl text-white mb-3">{lane.title}</h3>
            <p class="text-sm text-white/75 leading-relaxed">{lane.detail}</p>
          </article>
        ))}
      </div>

      <div class="grid lg:grid-cols-2 gap-8 mb-12">
        <article class="glass rounded-3xl p-10">
          <h2 class="text-3xl text-white mb-5">Release Gates</h2>
          <ul class="space-y-3">
            {releaseGates.map((gate) => (
              <li class="text-white/80 flex items-start gap-3">
                <span class="text-accent-pink mt-1">•</span>
                <span>{gate}</span>
              </li>
            ))}
          </ul>
        </article>

        <article class="glass rounded-3xl p-10">
          <h2 class="text-3xl text-white mb-5">Current Program Status</h2>
          <ul class="space-y-3">
            {activePrograms.map((line) => (
              <li class="text-white/80 flex items-start gap-3">
                <span class="text-accent-pink mt-1">•</span>
                <span>{line}</span>
              </li>
            ))}
          </ul>
          <a
            href="/portfolio"
            class="inline-flex items-center gap-2 text-accent-coral hover:text-white transition-colors mt-6"
          >
            See Product Portfolio
            <span aria-hidden="true">→</span>
          </a>
        </article>
      </div>

      <div class="text-center">
        <div class="glass rounded-3xl p-10">
          <h2 class="text-3xl text-white mb-4">Need a Source-Aware Deployment?</h2>
          <p class="text-white/75 mb-8 max-w-3xl mx-auto">
            We can scope a research-backed rollout for fiction, heritage, or educational dialogue.
          </p>
          <a href="/contact" class="inline-flex items-center gap-2 bg-gradient-to-r from-accent-pink to-accent-coral hover:opacity-90 text-white px-8 py-4 rounded-full font-medium transition-all duration-300">
            Start a Conversation
            <span aria-hidden="true">→</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
