---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import ParticleBackground from '../components/ParticleBackground.astro';

const deploymentFormats = [
  {
    title: 'Web Experience',
    description:
      'Browser-based conversational entry point for direct audiences and campaign launches.',
    bestFor: 'HEARSAY and Reading Companions',
  },
  {
    title: 'Indoor Installation',
    description:
      'On-site display with curated persona selection, touch/voice interaction, and controlled environment hardware.',
    bestFor: 'Echoes in museums, hotels, and cultural institutions',
  },
  {
    title: 'Outdoor Monument',
    description:
      'Weather-aware physical portal installations designed for public-space storytelling and heritage interpretation.',
    bestFor: 'Long-horizon Echoes deployments',
  },
];

const workflow = [
  'Discovery: audience, venue, constraints, and story scope',
  'Design: persona strategy, visual direction, and interaction format',
  'Build: authored prompt systems, runtime behavior, and QA',
  'Launch: staged deployment and iteration based on live use',
];
---

<BaseLayout title="Solutions">
  <ParticleBackground />
  <Navigation />
  
  <section class="relative pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl text-white mb-6">
          Deployment <span class="text-gradient">Formats</span>
        </h1>
        <p class="text-xl text-white/75 max-w-3xl mx-auto">
          Same core architecture, different contexts: web, indoor installations, and long-form public storytelling environments.
        </p>
      </div>

      <div class="grid lg:grid-cols-3 gap-6 mb-12">
        {deploymentFormats.map((format) => (
          <article class="glass rounded-3xl p-8">
            <h2 class="text-2xl text-white mb-3">{format.title}</h2>
            <p class="text-white/80 mb-6 leading-relaxed">{format.description}</p>
            <p class="text-sm text-white/60 uppercase tracking-[0.14em] mb-2">Best fit</p>
            <p class="text-accent-coral text-sm">{format.bestFor}</p>
          </article>
        ))}
      </div>

      <div class="grid lg:grid-cols-[1.1fr_1fr] gap-8 mb-12">
        <article class="glass rounded-3xl p-10">
          <h2 class="text-3xl text-white mb-5">Delivery Workflow</h2>
          <ul class="space-y-4">
            {workflow.map((step) => (
              <li class="text-white/80 flex items-start gap-3">
                <span class="text-accent-pink mt-1">•</span>
                <span>{step}</span>
              </li>
            ))}
          </ul>
        </article>

        <article class="glass-dark rounded-3xl p-6">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden border border-white/20 mb-6">
            <img
              src="/images/past-presense-back.png"
              alt="Installation reference visual"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          <p class="text-sm text-white/70">
            Drop-in replacement ready: place final venue render images in `public/images/incoming/` and I can wire those quickly.
          </p>
        </article>
      </div>

      <div class="glass rounded-3xl p-10 text-center">
        <h2 class="text-3xl text-white mb-4">Need a Custom Rollout Plan?</h2>
        <p class="text-white/75 mb-8 max-w-3xl mx-auto">
          We can scope phased launches for narrative products, institutional pilots, and physical installations.
        </p>
        <a href="/contact" class="inline-flex items-center gap-2 bg-gradient-to-r from-accent-pink to-accent-coral hover:opacity-90 text-white px-8 py-4 rounded-full font-medium transition-all duration-300">
          Request a Scope Call
          <span aria-hidden="true">→</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
