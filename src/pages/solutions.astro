---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
---

<BaseLayout title="Solutions">
  <ParticleBackground />
  <Navigation />
  
  <section class="relative pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-light mb-6">
          Solutions for Every
          <span class="text-gradient"> Institution</span>
        </h1>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
          Tailored holographic conversation experiences designed for your unique needs and audience
        </p>
      </div>
      
      <!-- Solutions Grid -->
      <div class="grid lg:grid-cols-3 gap-8 mb-16">
        <!-- Museums & Cultural Centers -->
        <div class="glass rounded-3xl p-8 hover:scale-105 transition-transform duration-300">
          <div class="w-16 h-16 bg-coral-100 rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-accent-coral" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-semibold mb-4">Museums & Cultural Centers</h3>
          <p class="text-neutral-600 mb-6">
            Transform static exhibits into dynamic conversations. Let visitors speak directly with historical figures, artists, and cultural icons.
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span class="text-sm">Historical figure conversations</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span class="text-sm">Artist retrospectives</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span class="text-sm">Cultural heritage storytelling</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span class="text-sm">Multi-language support</span>
            </li>
          </ul>
          <p class="text-sm font-medium text-accent-pink">Starting at $60,000</p>
        </div>
        
        <!-- Educational Institutions -->
        <div class="glass rounded-3xl p-8 hover:scale-105 transition-transform duration-300">
          <div class="w-16 h-16 bg-coral-100 rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-accent-coral" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path d="M12 14l9-5-9-5-9 5 9 5z"></path>
              <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-semibold mb-4">Educational Institutions</h3>
          <p class="text-neutral-600 mb-6">
            Bring history and science to life in the classroom. Students can interview historical figures and learn from interactive mentors.
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span class="text-sm">Interactive history lessons</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span class="text-sm">Science pioneers dialogue</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span class="text-sm">Literature author conversations</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span class="text-sm">Curriculum integration</span>
            </li>
          </ul>
          <p class="text-sm font-medium text-accent-pink">Starting at $80,000</p>
        </div>
        
        <!-- Corporate Heritage -->
        <div class="glass rounded-3xl p-8 hover:scale-105 transition-transform duration-300">
          <div class="w-16 h-16 bg-coral-100 rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-accent-coral" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-semibold mb-4">Corporate Heritage Centers</h3>
          <p class="text-neutral-600 mb-6">
            Let employees and visitors converse with company founders, hear origin stories, and understand corporate values through dialogue.
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span class="text-sm">Founder storytelling</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span class="text-sm">Company history exploration</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span class="text-sm">Innovation showcase</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-accent-pink mt-1">•</span>
              <span class="text-sm">Brand experience centers</span>
            </li>
          </ul>
          <p class="text-sm font-medium text-accent-pink">Starting at $150,000</p>
        </div>
      </div>
      
      <!-- Package Comparison -->
      <div class="glass rounded-3xl p-12 mb-16">
        <h2 class="text-3xl font-semibold text-center mb-12">Choose Your Package</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Starter -->
          <div class="text-center">
            <h3 class="text-xl font-semibold mb-2">Starter</h3>
            <p class="text-3xl font-bold text-accent-pink mb-4">$60-100K</p>
            <ul class="space-y-2 text-sm text-neutral-600 mb-6">
              <li>Single persona</li>
              <li>OLED or basic projection</li>
              <li>Standard AI dialogue</li>
              <li>3-month support</li>
            </ul>
            <div class="glass-dark rounded-full px-6 py-2 text-white text-sm inline-block">
              Perfect for pilot programs
            </div>
          </div>
          
          <!-- Professional -->
          <div class="text-center border-2 border-coral-200 rounded-3xl p-8 -m-8 relative">
            <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
              <span class="bg-accent-pink text-white text-xs px-3 py-1 rounded-full">Most Popular</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Professional</h3>
            <p class="text-3xl font-bold text-accent-pink mb-4">$150-250K</p>
            <ul class="space-y-2 text-sm text-neutral-600 mb-6">
              <li>3-5 personas</li>
              <li>HYPERVSN display</li>
              <li>Advanced AI with context</li>
              <li>12-month support</li>
              <li>Advertising integration</li>
            </ul>
            <div class="glass-dark rounded-full px-6 py-2 text-white text-sm inline-block">
              Ideal for major exhibits
            </div>
          </div>
          
          <!-- Enterprise -->
          <div class="text-center">
            <h3 class="text-xl font-semibold mb-2">Enterprise</h3>
            <p class="text-3xl font-bold text-accent-pink mb-4">$300K+</p>
            <ul class="space-y-2 text-sm text-neutral-600 mb-6">
              <li>Unlimited personas</li>
              <li>Multiple display points</li>
              <li>Custom AI training</li>
              <li>24/7 support</li>
              <li>Full revenue sharing</li>
            </ul>
            <div class="glass-dark rounded-full px-6 py-2 text-white text-sm inline-block">
              For flagship installations
            </div>
          </div>
        </div>
      </div>
      
      <!-- CTA -->
      <div class="text-center">
        <h2 class="text-3xl font-semibold mb-4">Ready to Transform Your Space?</h2>
        <p class="text-lg text-neutral-600 mb-8">
          Let's discuss how PastPresence can create unforgettable experiences for your visitors
        </p>
        <a href="/contact" class="inline-flex items-center gap-2 bg-accent-pink hover:bg-accent-coral text-white px-8 py-4 rounded-full font-medium transition-all duration-300 hover:scale-105">
          Get Custom Proposal
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>